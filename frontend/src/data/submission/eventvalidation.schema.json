{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://plattform.mintvernetzt.de/event.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 70
    },
    "place": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "description": {
      "type": "string",
      "maxLength": 1500
    },
    "contact_name": {
      "type": "string"
    },
    "contact_email": {
      "type": "string",
      "format": "email"
    },
    "terms_accepted": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": [
    "name",
    "place",
    "date",
    "description",
    "contact_name",
    "contact_email",
    "terms_accepted"
  ],
  "additionalProperties": true
}
